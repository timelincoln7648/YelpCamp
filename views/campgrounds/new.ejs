<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <h2 style="text-align: center;">The time is at hand</h2>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="nameInputText" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imageURLInputText" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="descriptionInputText" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>





